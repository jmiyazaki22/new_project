<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{User.find_by(id: post.user_id).image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(User.find_by(id: post.user_id).name, "/users/#{post.user_id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>